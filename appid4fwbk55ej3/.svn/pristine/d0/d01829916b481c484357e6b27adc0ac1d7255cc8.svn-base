body{
	background-color: #f4f4f4;
	font-size: 12px;
	color: #666;
	display: flex;flex-direction:column; justify-content: space-between;
	height: 100%;
}

.cart-head{
	flex-grow:0;
	flex-shrink: 0;
}

.J_nav{
	font-size: 16px;
}
.explain{
	display: flex;
	flex-direction:row;
	justify-content: center;
}
.explain-item{
	box-flex:1;
	margin: 10px auto 10px;
	list-style: circle;

}
.cart-con{
	flex-grow:1;
	overflow: scroll;
}
.container{
	position: absolute;
    top: 0rem;
    right: 0;
    bottom: 0;
    left: 0;
    height: 12rem;
    margin: auto;
    text-align: center;
}
.goods-list li{
	background: #fff;
	padding: 10px 10px 0; 
	position: relative;

}
.goods-list li img{
	width: 80px;
	height:80px;
}
.goods-list .checkbox{
  float: left;
  width: 10%;
  margin-top: 30px;
  background: #fff;
}
.item-right{
	float: left;
	border-bottom: 1px solid #ddd;
	width: 90%;
}

.item-right .item-text,.item-right img{
	float: left;
}

.item-right .cart-num{
	position: absolute;
	right: 10px;
	top: 36%;
	font-size: 14px;
	color: #000;
}

.item-text h4{
	font-size: 14px;
	font-weight: bold;
	color: #000;
	margin-top: 10px;
}
.item-text p{
	margin-top: 10px;
}

.cart-footer{
	background: #fff;
	border-top: 1px solid #666;
	height: 40px;
}
.change-num input{
   border: 1px solid #666;
   width: 30px;
   height: 20px;
   text-align: center;
   background: #fff;
   margin:0;
   padding:0;
}

.foot-right{
	float: right;
}
.cart-footer input{
    float: left;
    margin: 14px 10px 0;
}
.cart-footer p{
    line-height: 40px;
    float: left;

  font-size: 14px;
}
.foot-right b {
   float: left;
   line-height: 40px;
   margin-right: 10px;
   color: #b4282d;
   font-size: 14px;
}
.foot-right span{
	display: block;
	width: 120px;
	height: 40px;
	float: left;
	background: #b4282d;
	color: #fff;
	text-align: center;
	line-height: 40px;
	font-size: 16px;
}


